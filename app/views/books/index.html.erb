<h1>Books</h1>
<% @books.each do |book| %>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
      <span><%= link_to "Show", book_path(book.id) %></span>
      <span><%= link_to "Edit", edit_book_path(book.id) %></span>
      <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %></span>
      </td>
    </tr>
  </table>
<% end %>
<h2>New book</h2>
<% if @book.errors.any? %>
  <% if @book.errors.count == 1 %>
    1 error prohibited this book from being saved:
  <% else %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
  <% end %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
